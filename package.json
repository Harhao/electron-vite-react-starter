{
  "name": "electron-vite-react-starter",
  "version": "0.0.1",
  "main": "dist/main/index.js",
  "author": "Harhao",
  "description": "a starter about vite electron react antd",
  "scripts": {
    "dev": "npm run dev:all",
    "dev:all": "concurrently -n=react,electron -c=green,blue \"npm run dev:react\" \"npm run dev:ele\"",
    "dev:react": "vite",
    "dev:ele": "node -r ts-node/register script/build --env=development --watch",
    "build:react": "vite build",
    "build:ele": "node -r ts-node/register script/build --env=production",
    "build": "rimraf dist && npm run build:react && npm run build:ele && electron-builder",
    "serve": "vite preview",
    "lint": "eslint --fix --ext .ts,.tsx src"
  },
  "dependencies": {
    "antd": "^4.15.3",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-router-dom": "^5.2.0"
  },
  "build": {
    "appId": "huahaoworkspace@163.com",
    "asar": true,
    "directories": {
      "output": "release/${version}"
    },
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "files": [
      "!node_modules",
      "dist/**"
    ],
    "mac": {
      "icon": "build/icons/icon.icns",
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "linux": {
      "icon": "build/icons",
      "target": "deb",
      "maintainer": "Harhao"

    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./build/icons/icon.ico",
      "uninstallerIcon": "./build/icons/icon.ico",
      "installerHeaderIcon": "./build/icons/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ESCode",
      "deleteAppDataOnUninstall": false
    },
    "publish": [
      {
        "provider": "github",
        "url": "https://github.com/Harhao"
      }
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@types/minimist": "^1.2.1",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@types/react-router": "^5.1.13",
    "@typescript-eslint/parser": "^4.22.0",
    "chalk": "^4.1.0",
    "concurrently": "^5.3.0",
    "electron": "12.0.1",
    "electron-builder": "^22.8.0",
    "electron-store": "^7.0.2",
    "eslint": "^7.25.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.2.5",
    "lint-staged": "10.2.9",
    "minimist": "^1.2.5",
    "ora": "^5.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-esbuild": "^3.0.2",
    "rollup-plugin-node-externals": "^2.2.0",
    "sass": "^1.32.11",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "vite": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,.tsx}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "eslint --ignore-path .eslintignore",
      "git add "
    ]
  },
  "keywords": [
    "template",
    "typescript",
    "react",
    "vite",
    "rollup",
    "antd"
  ],
  "license": "MIT"
}
